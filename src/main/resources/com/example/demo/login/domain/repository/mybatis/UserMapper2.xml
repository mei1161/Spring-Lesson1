<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- ポイント1:クラス指定 -->
<mapper namespace="com.example.demo.login.domain.repository.mybatis.UserMapper2">

	<!-- ポイント5:マッピング定義 -->
	<resultMap type="com.example.demo.login.domain.User" id="user">
		<id column="user_id" property="userId" />
		<result column="password" property="password" />
		<result column="user_name" property="userName" />
		<result column="birthday" property="birthday" />
		<result column="age" property="age" />
		<result column="marriage" property="marriage" />
		<result column="role" property="role" />
	</resultMap>
	
	<!-- ポイント2:メソッドとの紐付け -->
	<!-- ポイント3: parameterType -->
	<!-- 1件insert -->
	<insert id="insert"
parameterType="com.example.demo.login.domain.User">
		INSERT_INTO m_user(
			user_id,
			password,
			user_name,
			birthday,
			age,
			marriage,
			role)
		VALUES(
			#{userId},
			#{password},
			#{userName},
			#{birthday},
			#{age},
			#{marriage},
			#{role})
	</insert>
	
	<!-- ポイント4: resultType -->
	<!-- 1件検索 -->
	<select id="selectOne" parameterType="string"
resultType="com.example.demo.login.domain.User">
	SELECT
		user_id,
		password,
		user_name,
		birthday,
		age,
		marriage,
		role
	FROM
		m_user
	WHERE
		user_id = #{userId}
	</select>
	
	<!-- ポイント5:マッピング定義 -->
	<!-- 全件検索 -->
	<select id="selectMany" resultMap="user">
		SELECT
			user_id,
			password,
			user_name,
			birthday,
			age,
			marriage,
			role
		FROM
			m_user
	</select>
	
	<!-- 1件更新 -->
	<update id="updateOne"
parameterType="com.example.demo.login.domain.User">
		UPDATE m_user
			SET
			password = #{password},
			user_name = #{userName},
			birthday = #{birthday},
			age = #{age},
			marriage = #{marriage}
		WHERE user_id = #{userId}
	</update>
	
	<!-- 1件削除 -->
	<delete id="deleteOne" parameterType="string">
		DELETE FROM m_user WHERE user_id = #{userId}
	</delete>
</mapper>
		
		
		